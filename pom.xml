		<maven.compiler.target>1.8</maven.compiler.target>
		<javadoc.opts>-Xdoclint:none</javadoc.opts>
		<additionalparam>${javadoc.opts}</additionalparam>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- Logging dependencies -->
