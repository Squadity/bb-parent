			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-jcl</artifactId>
				<version>${slf4j-jcl.version}</version>
				<!-- <scope>provided</scope> --> <!-- should be provided for logging with logback -->
